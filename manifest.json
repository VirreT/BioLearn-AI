{
    "manifest_version": 3,
    "name": "BioLearn AI",
    "version": "0.1.0",
    "description": "Ditt AIdrivna studieverktyg f√∂r biologi",
    "permissions": [
        "activeTab", 
        "scripting"
    ],
    "background": {
        "service_worker": "BioLearn-AI/extension/background.js"
    },
    "action": {
        "default_popup": "extension/popup.html",
        "default_icon": {
            "128": "assets/icon-128-1.png"
        },
        "default_title": "BioLearn AI"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["extension/content.js"]
        }
    ]
}
